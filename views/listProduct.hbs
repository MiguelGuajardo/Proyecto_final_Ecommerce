    <div class="form-control-lg w-50 border border-primary m-auto">
  <h2>Ingreso de productos</h2>
  <form method="post">
  {{!-- Input Title --}}
    <div class="mb-3 row">
      <label for="inputTitle" class="col-sm-2 col-form-label">Nombre</label>
      <div class="col-sm-10">
        <input type="text" name="title" class="form-control" id="inputTitle" placeholder="Ingrese el nombre del producto"  />
      </div>
    </div>
    {{!-- Input Description --}}
    <div class="mb-3 row">
      <label for="inputDescription" class="col-sm-2 col-form-label">Description</label>
      <div class="col-sm-10">
        <input type="text" name="description" class="form-control" id="inputDescription" placeholder="Ingrese el nombre del producto"  />
      </div>
    </div>
    {{!-- Input Code --}}
    <div class="mb-3 row">
      <label for="inputCode" class="col-sm-2 col-form-label">Code</label>
      <div class="col-sm-10">
        <input
          type="number"
          name="code"
          class="form-control"
          id="inputCode"
          placeholder="Ingrese un precio"
          
        />
      </div>
    </div>
    {{!-- Input Thumbnail --}}
    <div class="mb-3 row">
      <label for="inputThumbnail" class="col-sm-2 col-form-label">URL foto</label>
      <div class="col-sm-10">
        <input
          type="text"
          name="thumbnail"
          class="form-control"
          id="inputThumbnail"
          placeholder="Ingrese una imagen url del producto"
          
        />
      </div>
    </div>
    {{!-- Input Price --}}
    <div class="mb-3 row">
      <label for="inputPrice" class="col-sm-2 col-form-label">Precio</label>
      <div class="col-sm-10">
        <input
          type="number"
          name="price"
          class="form-control"
          id="inputPrice"
          placeholder="Ingrese un precio"
          
        />
      </div>
    </div>
    {{!-- Input Stock --}}
    <div class="mb-3 row">
      <label for="inputStock" class="col-sm-2 col-form-label">Stock</label>
      <div class="col-sm-10">
        <input
          type="number"
          name="stock"
          class="form-control"
          id="inputStock"
          placeholder="Ingrese un precio"
          
        />
      </div>
    </div>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary">Cargar producto</button>
    </div>
</form>
</div>

<div class="mb-3 mt-3">
  <div class="form-control-lg w-50 m-auto">
    <table class="form-control-lg w-50 m-auto bg-dark text-light">
        <thead>
            <tr>
            <th scope="col">Date</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Code</th>
            <th scope="col">Thumbnail</th>
            <th scope="col">Price</th>
            <th scope="col">Stock</th>
            </tr>
        </thead>
        <tbody id ="list" class="bg-light text-dark">
          {{#each datosProducts}}
          <tr>
            <th scope="col">{{this.date}}</th>
            <th scope="col">{{this.title}}</th>
            <th scope="col">{{this.description}}</th>
            <th scope="col">{{this.code}}</th>
            <th scope="col"><img src={{this.thumbnail}} style="width: 30px; height: 30px"/></td></th>
            <th scope="col">{{this.price}}</th>
            <th scope="col">{{this.price}}</th>
            </tr>
          {{/each}}
          
        </tbody>
    </table>
  </div>

</div>
